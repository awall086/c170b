<?xml version="1.0"?>

<PropertyList>

    <path>compass.ac</path>

    <effect>
        <inherits-from>Aircraft/c170b/Models/Effects/interior/c170b-interior-compartment-2</inherits-from>
        <object-name>Interior</object-name>
        <object-name>Ring</object-name>
        <object-name>Needle</object-name>
    </effect>

    <animation>
        <type>rotate</type>
        <object-name>Ring</object-name>
        <property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
        <factor>-1</factor>
        <axis>
            <x1-m>-0.02953</x1-m>
            <y1-m> 0.00   </y1-m>
            <z1-m> 0.01343</z1-m>
            <x2-m>-0.03167</x2-m>
            <y2-m> 0.00   </y2-m>
            <z2-m>-0.00907</z2-m>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Ring</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>magnetcompass</tooltip-id>
                <label>Magnetic heading: %3d</label>
                <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
                <mapping>heading</mapping>
            </binding>
        </hovered>
    </animation>

</PropertyList>
