<?xml version="1.0"?>

<PropertyList>

    <path>oat.ac</path>

	<animation>
		<type>material</type>
		<object-name>oat</object-name>
		<object-name>needle</object-name>
		<emission>
			<red>0.12</red>
			<green>0.04</green>
			<blue>0.0</blue>
			<factor-prop>/controls/lighting/int-lights</factor-prop>
		</emission>
	</animation>
	
    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>environment/temperature-degc</property>
       <interpolation>
            <entry><ind>-40</ind><dep>  60</dep></entry>
            <entry><ind>-20</ind><dep>   0</dep></entry>
            <entry><ind> 15</ind><dep>-105</dep></entry>
            <entry><ind> 40</ind><dep>-180</dep></entry>
            <entry><ind> 60</ind><dep>-240</dep></entry>
        </interpolation>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
	
</PropertyList>
