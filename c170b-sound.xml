		<engine>
			<name>engine</name>
			<mode>looped</mode>
			<path>/Sounds/Sounds_Engine_Continental-O200A.wav</path>
			<property>/engines/engine/running</property>
            <volume>
                <property>/sim/model/c170b/sound/volume-boost-doors</property>
            </volume>
            <volume>
                <property>/sim/model/c170b/sound/volume-ramp-engine-start</property>
            </volume>
            <volume>
                <property>/engines/engine[0]/rpm</property>
                <factor>0.002794118</factor>
                <!-- <offset>0.01882353</offset> -->
                <min>0.3</min>
                <max>2.0</max>
            </volume>
            <pitch>
                <property>/engines/engine[0]/rpm</property>
                <factor>0.001434783</factor>
                <min>0.0</min>
                <max>2.5</max>
                <offset>0.01</offset>
            </pitch>
            <reference-dist>5.0</reference-dist>
            <max-dist>200.0</max-dist>
		</engine>

		<propeller>
			<name>propeller</name>
			<mode>looped</mode>
			<path>Sounds/prop.wav</path>
			<condition>
				<greater-than>
					<property>/engines/engine/rpm</property>
					<value>10</value>
				</greater-than>
			</condition>
            <volume>
                <property>/sim/model/c170b/sound/volume-boost-doors</property>
            </volume>
            <volume>
                <property>/engines/engine[0]/rpm</property>
                <factor>0.000194118</factor>
                <!--<offset>0.305882353</offset>-->
                <min>0.0</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>/engines/engine[0]/rpm</property>
                <factor>0.001534783</factor>
                <min>0.0</min>
                <max>2.0</max>
                <offset>0.01</offset>
            </pitch>
            <reference-dist>5.0</reference-dist>
            <max-dist>200.0</max-dist>
		</propeller>

        <engine-cut>
            <name>engine-cut</name>
            <mode>once</mode>
            <path>Sounds/engine-cut.wav</path>
            <condition>
                <and>
                    <not>
                        <property>/engines/engine/running</property>
                    </not>
                    <greater-than>
                        <property>/engines/engine/egt-degf</property>
                        <value>800</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>/sim/model/c170b/sound/volume-boost-doors</property>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>200.0</max-dist>
        </engine-cut>

		<rumble>
			<name>rumble</name>
			<mode>looped</mode>
			<path>Sounds/rumble.wav</path>
			<condition>
				<or>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
				</or>
			<!-- <property>sim/current-view/internal</property> -->
			</condition>
			<position>
				<x>1.0</x>
				<y>0.0</y>
				<z>-1.5</z>
			</position>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<type>log</type>
				<factor>0.25</factor>
			</volume>
		</rumble>

		<squeal>
			<name>squeal</name>
			<path>Sounds/squeal.wav</path>
			<condition>
				<and>
					<or>
						<property>gear/gear[0]/wow</property>
						<property>gear/gear[1]/wow</property>
						<property>gear/gear[2]/wow</property>
					</or>
					<less-than>
						<property>velocities/vertical-speed-fps</property>
						<value>-0.05</value>
					</less-than>
				</and>
			</condition>
			<position>
				<x>1.0</x>
				<y>0.0</y>
				<z>-1.5</z>
			</position>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<factor>0.01</factor>
				<max>1.0</max>
			</volume>
			<volume>
				<internal>dt_stop</internal>
				<factor>0.1</factor>
				<max>1.0</max>
			</volume>
			<pitch>
				<property>velocities/groundspeed-kt</property>
				<factor>0.0025</factor>
				<offset>1.2</offset>
			</pitch>
		</squeal>

        <pavement-roll>
            <name>pavement-roll</name>
            <mode>looped</mode>
            <path>Sounds/tires-rolling-asphalt.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/gear/on-pavement</property>
                    <or>
                        <property>gear/gear[0]/wow</property>
                        <property>gear/gear[1]/wow</property>
                        <property>gear/gear[2]/wow</property>
                    </or>
                    <or>
                        <greater-than>
                            <property>/gear/gear[0]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[1]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[2]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <position>
                <x>0.5</x>
                <y>0.0</y>
                <z>-1.15</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <volume>
                <property>/sim/model/c170b/sound/volume-boost-doors</property>
            </volume>
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </pavement-roll>

